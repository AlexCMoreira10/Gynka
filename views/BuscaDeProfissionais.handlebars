<style>
  <style>
  * {
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f7fa;
    margin: 0;
    padding: 20px;
  }

  h2, h3 {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 24px;
  }

  form[action="/BuscarProfissionais"] {
    max-width: 480px;
    margin: 0 auto 40px auto;
    background: #fff;
    padding: 25px 30px;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  }

  label {
    display: block;
    font-weight: 600;
    color: #34495e;
    margin-bottom: 8px;
  }

  select {
    width: 100%;
    padding: 10px 12px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 15px;
    background-color: #fff;
    transition: border-color 0.2s;
    margin-bottom: 20px;
  }

  select:focus {
    border-color: #3498db;
    outline: none;
    box-shadow: 0 0 6px rgba(52, 152, 219, 0.3);
  }

  button[type="submit"] {
    width: 100%;
    padding: 14px;
    background-color: #f55e0b;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button[type="submit"]:hover {
    background-color: #e64e00;
  }

  hr {
    max-width: 480px;
    margin: 40px auto;
    border: none;
    border-top: 1px solid #ddd;
  }

  ul {
    max-width: 480px;
    margin: 0 auto 40px auto;
    padding-left: 0;
    list-style: none;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  }

  ul li {
    padding: 15px 20px;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  ul li:last-child {
    border-bottom: none;
  }

  ul li strong {
    color: #34495e;
  }

  ul li form {
    margin: 0;
  }

  ul li button {
    padding: 8px 16px;
    background-color: #27ae60;
    border-radius: 8px;
    border: none;
    color: white;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  ul li button:hover {
    background-color: #219150;
  }

  p {
    max-width: 480px;
    margin: 20px auto;
    font-size: 16px;
    color: #666;
    text-align: center;
  }

  strong {
    color: #f55e0b;
  }

  @media (max-width: 600px) {
    form[action="/BuscarProfissionais"],
    ul,
    hr,
    p {
      max-width: 100%;
      margin: 20px 10px;
    }
    ul li {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }
    ul li button {
      width: 100%;
    }
  }
</style>

</style>

<h2>Buscar Profissionais</h2>

<form action="/BuscarProfissionais" method="GET">
  <label for="profissao">Escolha a especialidade:</label>
  <select name="profissao" id="profissao" required>
    <option value="">-- Selecione --</option>
    <option value="Nutricionista" >Nutricionista</option>
    <option value="Psicólogo">Psicólogo</option>
    <option value="Personal Trainer">Personal Trainer</option>
  </select>
  <button type="submit">Buscar</button>
</form>

<hr>

{{#if especialistas.length}}
  <h3>Resultados encontrados:</h3>
  <ul>
    {{#each especialistas}}
      <li>
        <strong>{{this.Nome}} {{this.Sobrenome}}</strong> - {{this.Especialidade}}
        <form action="/agendar/{{this.ID_ESPECIALISTA}}" method="GET" style="display:inline;">
          <button type="submit">Selecionar</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{else if profissaoSelecionada}}
  <p>Nenhum profissional encontrado para: <strong>{{profissaoSelecionada}}</strong></p>
{{/if}}