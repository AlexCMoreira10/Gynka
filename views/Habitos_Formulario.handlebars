<form action="/Registrar_Habito" method="POST">
    <h2>Hábitos do Usuário</h2>

    <!-- Sono -->
    <label for="sono">Quantas horas dorme por noite, em média?</label>
    <input type="number" id="sono" name="sono" min="0" max="24" value="{{habitos.sono}}">
    <br>

    <!-- Preferência de treino -->
    <label for="preferencia">Tem preferência por tipo de treino?</label>
    <input type="text" id="preferencia" name="preferencia" placeholder="Ex: musculação, funcional, dança" value="{{habitos.preferencia}}">
    <br>

    <!-- Período preferido -->
    <label for="periodo">Período preferido para treinar:</label>
    <select id="periodo" name="periodo" required>
        <option value="">Selecione...</option>
        <option value="manha" {{#if (eq habitos.periodo "manha")}}selected{{/if}}>Manhã</option>
        <option value="tarde" {{#if (eq habitos.periodo "tarde")}}selected{{/if}}>Tarde</option>
        <option value="noite" {{#if (eq habitos.periodo "noite")}}selected{{/if}}>Noite</option>
    </select>
    <br>
    <button type="submit">Salvar</button>
</form>
