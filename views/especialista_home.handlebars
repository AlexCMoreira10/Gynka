<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Gynka - Especialista</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
  
  <style>
    body {
      background-color: #f9f9f9;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      padding-bottom: 80px;
    }

    .nav-days {
      display: flex;
      justify-content: space-around;
      background-color: #fff;
      border-bottom: 1px solid #ddd;
      padding: 10px 0;
    }

    .nav-days span {
      font-size: 0.95rem;
      color: #999;
      cursor: pointer;
      padding: 8px 12px;
      border-radius: 20px;
      transition: all 0.3s ease;
    }

    .nav-days .active {
      font-weight: bold;
      color: #000;
      background-color: #f0f0f0;
    }

    .card {
      border: none;
      border-radius: 12px;
      margin-bottom: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      background-color: #fff;
    }

    .card-title {
      font-weight: 600;
      margin-bottom: 15px;
    }

    .btn-custom {
      border-radius: 20px;
      padding: 10px 16px;
      font-weight: 500;
    }

    .stats-card {
      text-align: center;
      padding: 20px;
    }

    .stats-number {
      font-size: 1.5rem;
      font-weight: bold;
      margin: 5px 0;
    }

    .stats-change {
      font-size: 0.85rem;
      color: #28a745;
    }

    .stats-label {
      color: #666;
      font-size: 0.9rem;
    }

    .patient-item {
      display: flex;
      align-items: center;
      padding: 15px;
      border-bottom: 1px solid #f0f0f0;
      transition: background-color 0.2s ease;
    }

    .patient-item:hover {
      background-color: #f8f9fa;
    }

    .patient-item:last-child {
      border-bottom: none;
    }

    .patient-avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
      margin-right: 15px;
    }

    .patient-info {
      flex-grow: 1;
    }

    .patient-name {
      font-weight: 600;
      margin-bottom: 3px;
    }

    .patient-details {
      color: #666;
      font-size: 0.9rem;
    }

    .workout-exercise {
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 15px;
      margin-top: 10px;
    }

    .exercise-controls {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
    }

    .accordion-button {
      font-weight: 500;
    }

    /* Navegação inferior */
    .navbar.fixed-bottom {
      background-color: #fff !important;
      border-top: 1px solid #ddd;
      box-shadow: 0 -2px 8px rgba(0,0,0,0.1);
    }

    .navbar.fixed-bottom a {
      text-decoration: none;
      font-size: 0.85rem;
      color: #666;
      transition: color 0.3s ease;
    }

    .navbar.fixed-bottom a:hover,
    .navbar.fixed-bottom a.active {
      color: #000;
    }

    @media (min-width: 768px) {
      .nav-days {
        justify-content: center;
        gap: 20px;
      }
      
      body {
        padding-bottom: 20px;
      }
      
      .navbar.fixed-bottom {
        display: none;
      }
    }
  </style>
</head>

<body>
  <div class="container mt-3">
    <!-- Navegação de Dias -->
    <div class="nav-days mb-3">
      <span>Segunda</span>
      <span class="active">Terça</span>
      <span>Quarta</span>
      <span>Quinta</span>
      <span>Sexta</span>
      <span>Sábado</span>
      <span>Domingo</span>
    </div>

    <!-- Estatísticas Resumidas -->
    <div class="row g-3 mb-4">
      <div class="col-6">
        <div class="card stats-card">
          <div class="stats-label">Pacientes Ativos</div>
          <div class="stats-number">24</div>
          <div class="stats-change">+15% esse mês</div>
        </div>
      </div>
      <div class="col-6">
        <div class="card stats-card">
          <div class="stats-label">Consultas Hoje</div>
          <div class="stats-number">8</div>
          <div class="stats-change">+25% vs ontem</div>
        </div>
      </div>
    </div>

    <!-- Gráfico de Performance -->
    <div class="card p-3">
      <h5 class="card-title">Performance Semanal</h5>
      <p><strong>Consultas realizadas</strong> <span class="text-success">+18% essa semana</span></p>
      <div class="chart-container">
        <canvas id="performanceChart"></canvas>
      </div>
    </div>

    <!-- Próximas Consultas -->
    <div class="card p-3">
      <h5 class="card-title">Próximas Consultas</h5>
      <p>Agenda de <strong>Terça-feira</strong></p>
      
      <div class="workout-exercise">
        <p><strong>09:00 - Maria Silva</strong></p>
        <p class="mb-1">Consulta de Nutrição - Acompanhamento</p>
        <p class="text-muted small">Paciente com 3 meses de tratamento, foco em perda de peso.</p>
        <div class="exercise-controls">
          <button class="btn btn-outline-primary btn-sm">Ver Histórico</button>
          <button class="btn btn-primary btn-sm">Iniciar Consulta</button>
        </div>
      </div>

      <div class="workout-exercise">
        <p><strong>10:30 - João Santos</strong></p>
        <p class="mb-1">Personal Training - Treino Funcional</p>
        <p class="text-muted small">Sessão de treino funcional, foco em fortalecimento.</p>
        <div class="exercise-controls">
          <button class="btn btn-outline-primary btn-sm">Ver Plano</button>
          <button class="btn btn-primary btn-sm">Preparar Treino</button>
        </div>
      </div>
    </div>

    <!-- Lista de Pacientes Recentes -->
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Pacientes Recentes</h5>
      </div>
      <div class="card-body p-0">
        <div class="patient-item">
          <div class="patient-avatar">MS</div>
          <div class="patient-info">
            <div class="patient-name">Maria Silva</div>
            <div class="patient-details">Nutrição • Última consulta: hoje</div>
          </div>
          <i class="bi bi-chevron-right text-muted"></i>
        </div>
        
        <div class="patient-item">
          <div class="patient-avatar">JS</div>
          <div class="patient-info">
            <div class="patient-name">João Santos</div>
            <div class="patient-details">Personal Training • Última sessão: ontem</div>
          </div>
          <i class="bi bi-chevron-right text-muted"></i>
        </div>
        
        <div class="patient-item">
          <div class="patient-avatar">AF</div>
          <div class="patient-info">
            <div class="patient-name">Ana Ferreira</div>
            <div class="patient-details">Fisioterapia • Última sessão: 2 dias atrás</div>
          </div>
          <i class="bi bi-chevron-right text-muted"></i>
        </div>
      </div>
    </div>

    <!-- Ferramentas Rápidas -->
    <div class="accordion mt-4" id="accordionFerramentas">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingTools">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTools">
            Ferramentas Rápidas
          </button>
        </h2>
        <div id="collapseTools" class="accordion-collapse collapse show" data-bs-parent="#accordionFerramentas">
          <div class="accordion-body">
            <div class="row g-2">
              <div class="col-6">
                <button class="btn btn-outline-primary btn-sm w-100">
                  <i class="bi bi-calendar-plus"></i> Nova Consulta
                </button>
              </div>
              <div class="col-6">
                <button class="btn btn-outline-success btn-sm w-100">
                  <i class="bi bi-person-plus"></i> Novo Paciente
                </button>
              </div>
              <div class="col-6">
                <button class="btn btn-outline-info btn-sm w-100">
                  <i class="bi bi-clipboard-data"></i> Relatórios
                </button>
              </div>
              <div class="col-6">
                <button class="btn btn-outline-warning btn-sm w-100">
                  <i class="bi bi-gear"></i> Configurações
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Botões de Ação Principal -->
    <div class="text-center mt-4 mb-4">
      <a href="#">
        <button class="btn btn-dark btn-custom me-2">
          <i class="bi bi-calendar-event"></i> Minha Agenda
        </button>
      </a>
      <a href="#">
        <button class="btn btn-dark btn-custom">
          <i class="bi bi-people"></i> Todos os Pacientes
        </button>
      </a>
    </div>
  </div>

  <!-- Barra de navegação inferior (visível em telas pequenas) -->
  <nav class="navbar fixed-bottom d-md-none bg-white border-top shadow-sm">
    <div class="container-fluid d-flex justify-content-around">
      <a class="text-center active" href="#">
        <i class="bi bi-house-door fs-5"></i><br><small>Início</small>
      </a>
      <a class="text-center" href="#">
        <i class="bi bi-calendar fs-5"></i><br><small>Agenda</small>
      </a>
      <a class="text-center" href="#">
        <i class="bi bi-people fs-5"></i><br><small>Pacientes</small>
      </a>
      <a class="text-center" href="#">
        <i class="bi bi-chat fs-5"></i><br><small>Mensagens</small>
      </a>
      <a class="text-center" href="#">
        <i class="bi bi-person fs-5"></i><br><small>Perfil</small>
      </a>
    </div>
  </nav>

  <script>
    // Gráfico de Performance
    const ctx = document.getElementById('performanceChart').getContext('2d');
    const performanceChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
        datasets: [{
          label: 'Consultas',
          data: [8, 12, 6, 14, 10, 4, 2],
          borderColor: '#0d6efd',
          backgroundColor: 'rgba(13, 110, 253, 0.1)',
          fill: true,
          tension: 0.4,
          pointBackgroundColor: '#0d6efd',
          pointBorderColor: '#fff',
          pointBorderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: {
          intersect: false,
          mode: 'index'
        },
        scales: {
          y: {
            beginAtZero: true,
            max: 16,
            ticks: {
              stepSize: 4,
              color: '#666'
            },
            grid: {
              color: 'rgba(0,0,0,0.05)'
            }
          },
          x: {
            ticks: {
              color: '#666'
            },
            grid: {
              display: false
            }
          }
        },
        plugins: {
          legend: {
            display: false
          },
          tooltip: {
            backgroundColor: 'rgba(0,0,0,0.8)',
            titleColor: '#fff',
            bodyColor: '#fff',
            cornerRadius: 6
          }
        }
      }
    });

    // Interatividade dos dias da semana
    document.querySelectorAll('.nav-days span').forEach(day => {
      day.addEventListener('click', function() {
        document.querySelector('.nav-days .active').classList.remove('active');
        this.classList.add('active');
      });
    });
  </script>
  
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>